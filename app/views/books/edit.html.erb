<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>

    	<%= form_with model:@book, local: true do |f| %>
      	<div class="book_title">
      	   <h6>Title</h6>
      	   <%= f.text_field :title %>
      	</div>
      	<div>
      	   <h6>Opinion</h6>
      	   <%= f.text_field :body %>
      	</div>
      	<%= f.submit 'Update Book' %>
    	<% end %>
    	
    	<%= link_to "Show", book_path(@book.id) %> | 
    	<%= link_to "Back", books_path %>
    </div>
  </div>
</div>
